<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/biankuang"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="10dp">
    <TextView
        android:id="@id/history_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wenshu_collection"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@+id/history_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_fresh"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/history_time"/>
    <TextView
        android:id="@+id/history_time"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        tools:text="2017-12-31"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
</LinearLayout>