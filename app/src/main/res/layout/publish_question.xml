<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/menu_main_lawyer_publish_serve"
                android:textColor="@color/colordarkOrange"
                android:textSize="40sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/colorOrange"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:textSize="20sp"
                android:hint="@string/menu_main_lawyer_publish_txt"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorOrange">
                <Button android:id="@+id/publish_question_publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorgreenLight"
                android:textColor="@color/colorOrange"
                android:textSize="20sp"
                android:text="@string/menu_main_lawyer_publish_submit"/>
                </LinearLayout>
</LinearLayout>